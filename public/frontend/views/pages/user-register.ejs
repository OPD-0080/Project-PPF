<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <!-- Meta -->
	<%- include ("../partial/meta-description.ejs") %>
    <!-- Title -->
    <title>PROJECT - PPF || SignUp </title>
    <!-- General css -->
    <%- include ("../partial/meta-css.ejs") %>
</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-12">
					<!-- NOTIFICATION SECTION  -->
                    <%- include ("../partial/notificatiion.ejs")  %>
                    <!-- NOTIFICATION SECTION  -->
					<div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
									<div class="text-center mb-12 logo-wrapper">
                                        <a href="<% if (context !== undefined) { %><%- context.config.view_urls.dashboard %><% } %>" class="logo-img-wrapper">
                                            <img src="../../img/svg" alt="">
                                            <div class="logo-content"> Logo Content </div>
                                        </a>
									</div>
                                    <h4 class="text-center mb-1 text-white"> SignUp Your Account </h4>
                                    <form action="<% if (context !== undefined) { %><%- context.config.post_urls.user_register %><% } %>" method="post">
                                        <div class="row" style="margin-top: 20px;">
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Email</strong></label>
                                                <input type="email" class="form-control" placeholder="hello@example.com" name="username">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>First Name</strong></label>
                                                <input type="text" class="form-control" name="first_name">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Last Name</strong></label>
                                                <input type="text" class="form-control" name="last_name">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Other Name (Option)</strong></label>
                                                <input type="text" class="form-control" name="middle_name">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Contact Number</strong></label>
                                                <input type="tel" class="form-control" name="tel" maxlength="10">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Date of Birth</strong></label>
                                                <input type="date" class="form-control" name="date_of_birth">
                                            </div>
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Password</strong></label>
                                                <input type="password" class="form-control" readonly value='<% if (context.random_default_pass !== undefined) { %><%- context.random_default_pass %><% } %>' name="new_pass">
                                            </div> 
                                            <div class="form-group; form-cell col-md-6">
                                                <label class="mb-1 text-white"><strong>Confirm Password</strong></label>
                                                <input type="password" class="form-control" readonly value='<% if (context.random_default_pass !== undefined) { %><%- context.random_default_pass %><% } %>' name="confirm_pass">
                                            </div> 
                                            
                                            <div class="text-center mt-4" style="margin-top: 10px;">
                                                <button type="submit" class="btn bg-white text-primary btn-block">Sign Me Up</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p class="text-white">Already have an account? <a class="text-white" href="page-login.html">Sign in</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!--**********************************
	Scripts
***********************************-->
    <!-- General js -->
    <%- include ("../partial/meta-js.ejs") %>

</body>
</html>