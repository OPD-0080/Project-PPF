<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <!-- Meta -->
	<%- include ("../partial/meta-description.ejs") %>

	<!-- Title -->
	<title>Welly - Django Hospital Admin Dashboard Bootstrap Template</title>
    <!-- General css -->
    <%- include ("../partial/meta-css.ejs") %>
</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <!-- NOTIFICATION SECTION  -->
                    <%- include ("../partial/notificatiion.ejs")  %>
                    <!-- NOTIFICATION SECTION  -->
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
									<div class="text-center mb-12 logo-wrapper">
                                        <a href="index.html" class="logo-img-wrapper">
                                            <img src="../../img/svg" alt="">
                                            <div class="logo-content"> Logo Content </div>
                                        </a>
									</div>
                                    <h4 class="text-center mb-4 text-white"> Login into your account  </h4>
                                    <form action="<% if (context !== undefined) { %><%- context.login_url %><% } %>" method="post">
                                        <div class="form-group form-cell">
                                            <label class="mb-1 text-white"><strong>Email / User ID</strong></label>
                                            <input type="text" class="form-control" placeholder="hello@example.com / comxxxxx" name="username">
                                        </div>
                                        <div class="form-group form-cell" id="business-wrapper" data-com='<% if (context.businesses !== undefined) { %> <%- context.businesses %> <% } %>'>
                                            <label class="mb-1 text-white"><strong>Company</strong></label>
                                            <input type="text" class="form-control" id="input-company" value="" name="company">
                                            <ul class="preview-company-wrapper">
                                            </ul>
                                        </div>
                                        <div class="form-group form-cell">
                                            <label class="mb-1 text-white"><strong>Password</strong></label>
                                            <input type="password" class="form-control" value="" name="password">
                                        </div>
                                        <div class="row d-flex justify-content-between mt-4 mb-2">
                                            <div class="form-group">
                                                <a class="text-white" href="page-forgot-password.html">Forgot Password?</a>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn bg-white text-primary btn-block"> Login me in  </button>
                                        </div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p class="text-white">Don't have an account? <a class="text-white" href="register.html">Sign up</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- General js -->
    <%- include ("../partial/meta-js.ejs") %>

</body>
</html>