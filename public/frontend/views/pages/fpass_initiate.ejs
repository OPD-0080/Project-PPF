<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <!-- Meta -->
	<%- include ("../partial/meta-description.ejs") %>
    <!-- Title -->
	<title>Welly - Django Hospital Admin Dashboard Bootstrap Template</title>
    <!-- General css -->
    <%- include ("../partial/meta-css.ejs") %>

</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <!-- NOTIFICATION SECTION  -->
                                    <%- include ("../partial/notificatiion.ejs")  %>
                                    <!-- NOTIFICATION SECTION  -->
									<div class="text-center mb-3">
										<a href="<% if (context !== undefined) { %><%- context.config.view_urls.login %><% } %>"><img src="/frontend/images/" alt=""></a>
									</div>
                                    <h4 class="text-center mb-4 text-white">Reset Password</h4>
                                    <form action="<% if (context !== undefined) { %><%- context.config.post_urls.forgot_password_initiate %><% } %>" method="post">
                                        <div class="form-group">
                                            <label class="text-white"><strong>Email</strong></label>
                                            <input type="email" class="form-control" name="username" value="hello@example.com">
                                        </div>
                                        <div class="form-group form-cell" id="business-wrapper" data-com='<% if (context.businesses !== undefined) { %> <%- context.businesses %> <% } %>'>
                                            <label class="mb-1 text-white"><strong>Company</strong></label>
                                            <input type="text" class="form-control" id="input-company" name="company">
                                            <ul class="preview-company-wrapper">
                                            </ul>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn bg-white text-primary btn-block">SUBMIT</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- General js -->
    <%- include ("../partial/meta-js.ejs") %>

</body>
</html>